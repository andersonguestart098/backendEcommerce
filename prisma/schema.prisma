generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  price       Float
  image       String
  discount    Int
  paymentOptions String[]
  colors      Color[]  // Relacionamento com o modelo Color
}

model Color {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   // Nome da cor
  image     String   // URL da imagem da cor
  productId String   // Chave estrangeira do Produto
  product   Product? @relation(fields: [productId], references: [id])  // Relacionamento com o produto
}

model Banner {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  imageUrl  String   // URL da imagem armazenada no Cloudinary
  createdAt DateTime @default(now())
}

